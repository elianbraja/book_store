<div class="container">
<h1 class="header"> Books of author  </h1>

  <div>
    <%= button_to "Add New Book", krijo_per_autorin_url(@autori.id),:method => :get, id:"new_book_button" %>
    <% @autori_books.each do |book_item| %>
      <p><em>Title: </em><%= book_item.title %> </p>
      <p><em>Autori </em><%= @autori.id %> </p>
      <p><em>Publisher: </em><%= book_item.publisher %> </p>
      <p><em>Number of pages: </em><%= book_item.number_of_pages %> </p>
      <p><em>Date of publication: </em><%= book_item.date_of_publication %> </p>
      <p><em>Author: </em><%= book_item.author.name %> <%= book_item.author.surname %> </p>
      <div class="buttons">
        <%= button_to "Modify", edit_book_url(book_item.id), :method => :get, class:"buttonTo" %>
        <%= button_to "Delete", book_path(book_item.id), method: :delete, data: {confirm:'Are you sure?'}, class:"buttonTo"  %>
        <%= button_to "Details", book_url(book_item.id), :method => :get, class:"buttonTo" %>
      </div>
    <% end %>
  </div>

</div>
